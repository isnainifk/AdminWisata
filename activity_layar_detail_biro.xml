<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layardetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".LayarDetailBiro">

    <TextView
        android:id="@+id/tvIdPembelian2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Biro :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIdPembeli2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIdPembelian2"
        android:text="ID Kecamatan"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTanggalBeli2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIdPembeli2"
        android:text="Nama Biro :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTotalHarga2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTanggalBeli2"
        android:text="Alamat :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIdTiket2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalHarga2"
        android:text="CP :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIdTiket3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIdTiket2"
        android:text="ID Wisata :"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtIdPembelian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvIdPembelian2"
        android:layout_marginLeft="87dp"
        android:layout_toRightOf="@+id/tvIdPembelian2"
        android:hint="id_biro"
        android:inputType="date"/>

    <EditText
        android:id="@+id/edtIdPembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvIdPembeli2"
        android:layout_alignLeft="@+id/edtIdPembelian"
        android:hint="id_kecamatan"
        android:inputType="date"/>

    <EditText
        android:id="@+id/edtTanggalBeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTanggalBeli2"
        android:layout_alignLeft="@+id/edtIdPembelian"
        android:hint="Nama_biro"
        />

    <EditText
        android:id="@+id/edtTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTotalHarga2"
        android:layout_alignLeft="@+id/edtIdPembelian"
        android:hint="Alamat"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtIdTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvIdTiket2"
        android:layout_alignLeft="@+id/edtIdPembelian"
        android:hint="cp" />

    <EditText
        android:id="@+id/edtIdTiket2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvIdTiket3"
        android:layout_alignLeft="@+id/edtIdPembelian"
        android:hint="Id Wisata"
        android:inputType="date"/>

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linearlayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-243dp"
        android:inputType="textMultiLine"
        android:text="Pesan Muncul disini"
        android:textAlignment="center"
        android:textSize="20sp" />
    <LinearLayout
        android:id="@+id/Linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvIdTiket2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btInsert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert"/>
        <Button
            android:id="@+id/btUpdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/btDelete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>
</RelativeLayout>
